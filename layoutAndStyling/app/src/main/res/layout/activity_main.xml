<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context="com.example.ruud.layoutandstyling.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="225dp"
        android:layout_height="262dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/firstBadGuy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/donald" />

    <TableLayout
        android:layout_width="368dp"
        android:layout_height="76dp"
        android:layout_marginLeft="8dp"
        android:background="@android:color/background_dark"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="285dp">

        <TableRow
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@android:color/background_light" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="The Donald"
                android:textColor="@android:color/background_light" />
        </TableRow>

        <TableRow
            android:id="@+id/Gender"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="@android:color/background_light" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown"
                android:textColor="@android:color/background_light" />
        </TableRow>

        <TableRow
            android:id="@+id/Age"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textColor="@android:color/background_light" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Twee keer de helft"
                android:textColor="@android:color/background_light" />
        </TableRow>

        <TableRow
            android:id="@+id/Bounty"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bounty"
                android:textColor="@android:color/background_light" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="38 eu"
                android:textColor="@android:color/background_light" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="140dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="363dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="570dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Details"
            android:textColor="@android:color/background_light" />

        <ScrollView
            android:id="@+id/Donald"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Donald John Trump (born June 14, 1946) is the 45th and current President of the United States, in office since January 20, 2017. Before entering politics, he was a businessman and television personality."
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/repoButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="REPORT!" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
